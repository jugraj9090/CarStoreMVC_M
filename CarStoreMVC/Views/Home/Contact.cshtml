@{
    ViewBag.Title = "Contact";
}



<div class="container">
    <div class="row">
        <div class="col-md-6">

            <h1>Send Query </h1>
            <hr />

            <form action="Message" method="post" cellspacing="10px" required>
                <div class="form-group-lg">
                    <label>Enter Name </label>
                    <input type="text" id="txt_Name" class="form-control" name="txt_Name" required />
                </div>

                <div class="form-group-lg">
                    <label>Enter Email</label>
                    <input type="email" id="txt_Email" class="form-control" name="txt_Email" required />
                </div>


                <div class="form-group-lg">
                    <label>Enter Contact</label>
                    <input type="number" id="txt_Contact" class="form-control" name="txt_Contact" required />
                </div>

                <div class="form-group-lg">
                    <label>Enter Message</label>
                    <input type="text" id="txt_Msg" class="form-control" name="txt_Msg" required />
                </div>



                <input type="submit" value="Submit" class="btn btn-warning" />

            </form>



        </div>

    </div>

</div>


