@model IEnumerable<CarStoreMVC.Models.CarRecord>

@{
    ViewBag.Title = "CarList";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>List of all Cars</h2>

            <p>
                @Html.ActionLink("Add New Car ", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Model)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Features)
                    </th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Features)
                        </td>
                        <td class="btn btn-warning">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </td>
                        <td class="btn btn-success">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>


            <h1 class="btn btn-danger"> @Html.ActionLink("DashBoard", "Admin_Dashboard", "Home") </h1>


        </div>

    </div>

</div>
